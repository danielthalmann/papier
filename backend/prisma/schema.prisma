// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int             @id @default(autoincrement())
  name            String?         @unique
  email           String          @unique
  password        String?
  first_name      String?
  last_name       String?
  image_url       String?
  last_login      DateTime
  updated_at      DateTime
  created_at      DateTime
  log             ActivityLog[]
}

model ActivityLog {
  id      Int  @id @default(autoincrement())
  user_id Int
  user    User @relation(fields: [user_id], references: [id])
  type    String
  datas   Json?
}